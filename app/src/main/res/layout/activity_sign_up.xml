<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
android:layout_alignParentTop="true"
        android:id="@+id/parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email address"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="64dp"
            android:textColor="#0d47a1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autocomplete email addresses"
            android:layout_marginBottom="48dp"
            android:layout_marginLeft="32dp"
           />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="32dp"
            android:hint="Password"
            android:drawableRight="@drawable/blue_round_help_button"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_round_help_button"
            android:text="I'd like to receive announcements,promos and tips(update or opt out at any time)"
            android:layout_marginBottom="28dp"
            android:gravity="left"
            android:layout_gravity="center"
            android:drawablePadding="12dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:textColor="#000000"
           />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal"
android:layout_gravity="center"
        >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By signing up I agree to the "

        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="terms of use "
            android:textColor="#0d47a1"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and processing of my personal date as stated in the privacy policy"

            />


    </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="#fafafa"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:background="#0d47a1"
        android:layout_above="@id/bottom"
        android:layout_marginBottom="180dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="32dp"
        android:background="#bad1d0c3"
        android:padding="32dp"
        android:id="@+id/bottom"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or sign in with"
            android:paddingBottom="16dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOOGLE"
                android:drawableLeft="@drawable/ic_google_plus"
                android:drawablePadding="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:textColor="#0d47a1"
                android:background="@drawable/sign_in_outer_line"
                android:layout_marginRight="16dp"
                android:textSize="16sp"

                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:drawableLeft="@drawable/ic_facebook"
                android:drawablePadding="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:textColor="#0d47a1"
                android:background="@drawable/sign_in_outer_line"
                android:textSize="16sp"

                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
