<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_centerInParent="true">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_envelope"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="64dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We have sent an email to"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nwachiemi@gmail.com"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Click on the link in the email to confirm your email address"
        android:textSize="16sp"
        android:layout_marginBottom="64dp"/>
    <Button
        android:id="@+id/confirmEmail"
android:background="#303f9f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="open email app"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:textColor="#fff"
        android:padding="16dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I HAVE CONFIRMED MY EMAIL"
        android:layout_marginBottom="84dp"
        android:textColor="#303f9f"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#303f9f"
        android:layout_marginBottom="84dp"
        android:text="RESEND CONFIRMATION EMAIL"
        android:textSize="16sp"/>
</LinearLayout>
</RelativeLayout>